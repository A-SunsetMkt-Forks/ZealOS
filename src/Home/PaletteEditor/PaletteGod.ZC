public U0 PaletteGod(Bool seedUse=TRUE, Bool instant=TRUE)
{
	// Instantly generate a random palette, seed-based or not
	I64		i;
	CBGR24	palette;
	I32		color;

	if (seedUse)
		Seed(GodPick);
	for (i=0; i < 16; i++)
	{
		if (instant || seedUse)
		{
			color = RandI32;
			palette = color & 0xFFFFFF;
		}
		else {
			palette = GodPick & 0xFFFFFF;
		}
		gr_palette[i] = palette;
		LFBFlush;
	}
}
